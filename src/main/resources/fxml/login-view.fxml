<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.pedrosaez.englishtrainer.controller.LoginController"
             minHeight="300.0" minWidth="400.0" prefHeight="600.0" prefWidth="700.0" >
    <children>
        <VBox alignment="CENTER" spacing="15" AnchorPane.leftAnchor="50"
              AnchorPane.rightAnchor="50" AnchorPane.topAnchor="40">

            <Label text="English Trainer" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

            <TextField fx:id="usernameField" promptText="Usuario" maxWidth="200"/>
            <PasswordField fx:id="passwordField" promptText="Contraseña" maxWidth="200"/>

            <Button text="Iniciar sesión" onAction="#onLoginClicked" maxWidth="200"/>
            <Button text="Registro" onAction="#onRegisterClicked" maxWidth="200"/>
            <Label fx:id="errorLabel" textFill="red"/>
        </VBox>
    </children>
</VBox>